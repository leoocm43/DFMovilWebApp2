<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1>Sitios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre de la base</th>
      <th>Nombre del titular</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sitios.each do |sitio| %>
      <tr>
        <td><%= sitio.nombreBase %></td>
        <td><%= sitio.nombreTitular %></td>
        <td><%= sitio.latitude %></td>
        <td><%= sitio.longitude %></td>
        <td><%= link_to 'Detalles', sitio, class:'button' %></td>
        <!--<td><%= link_to 'Edit', edit_sitio_path(sitio),class:'button' %></td>-->
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!--<%= link_to 'New Sitio', new_sitio_path, class:'button'  %>--> 

  <div style='width: 800px;'>
    <div id="multi_markers" style='width: 800px; height: 400px;'></div>
  </div>

<script type="text/javascript">
  var handler = Gmaps.build('Google');
handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
  var markers = handler.addMarkers([
    { lat: 19.289683, lng: -99.1448033},
    { lat: 19.3563827, lng: -99.1685538},
    
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
